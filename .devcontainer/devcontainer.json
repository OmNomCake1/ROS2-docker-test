{
    "name": "ros2-jazzy-devcontainer",

    "dockerComposeFile": "../docker-compose.yml",

    "workspaceFolder": "/root/ros2_docker_test",

    "service": "ros2_dev",

    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "ms-iot.vscode-ros",
                "twxs.cmake"
            ],

            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },

    "postCreateCommand": "find . -type f -exec touch {} +"

}